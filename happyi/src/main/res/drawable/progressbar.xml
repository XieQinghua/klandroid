<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="0"
                android:centerColor="@color/party_backgrounds"
                android:centerY="0.75"
                android:endColor="@color/party_backgrounds"
                android:startColor="@color/party_backgrounds" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/orangered"
                    android:centerY="0.75"
                    android:endColor="@color/orangered"
                    android:startColor="@color/white" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/orangered"
                    android:startColor="@color/orangered" />
            </shape>
        </clip>
    </item>

</layer-list>