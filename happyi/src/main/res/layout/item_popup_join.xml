<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_join_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_oval_sharp_selector"
                android:text="个人报名"
                android:textColor="@color/party_text_color"
                android:textSize="@dimen/font_size_big"
                android:visibility="gone" />


            <Button
                android:id="@+id/bt_join_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_oval_sharp_selector"
                android:text="家庭报名"
                android:textColor="@color/party_text_color"
                android:textSize="@dimen/font_size_big"
                android:visibility="gone" />


            <Button
                android:id="@+id/bt_join_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_oval_sharp_selector"
                android:text="团体报名"
                android:textColor="@color/party_text_color"
                android:textSize="@dimen/font_size_big"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@null" />

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_oval_sharp_selector"
            android:text="取消"
            android:textColor="@color/party_text_color"
            android:textSize="@dimen/font_size_big" />
    </LinearLayout>

</RelativeLayout>
