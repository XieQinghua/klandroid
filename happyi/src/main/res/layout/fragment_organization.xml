<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/party_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relative_ngo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ngo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="机构"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/font_size_big" />

                <TextView
                    android:id="@+id/view_ngo"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/orangered"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relative_Foundation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Foundation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="基金会"
                    android:textColor="@color/happyi_content_color"
                    android:textSize="@dimen/font_size_big" />

                <TextView
                    android:id="@+id/view_Foundation"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/orangered"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ngo_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

