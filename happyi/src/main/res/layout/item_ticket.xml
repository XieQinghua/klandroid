<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/party_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <org.thvc.happyi.view.CircleImageView
            android:id="@+id/iv_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/icon_head_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_party_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿色方舟"
                android:textColor="@color/happyi_title_color"
                android:textSize="@dimen/font_size_big" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="报名时间：2016-01-29"
                    android:textColor="@color/happyi_content_color"
                    android:textSize="@dimen/font_size_middle" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/party_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳涨剑圣"
            android:textColor="@color/orangered"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_normal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/iv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付活动费用1元"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_normal"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/im_qcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_error"/>
    </LinearLayout>


</LinearLayout>