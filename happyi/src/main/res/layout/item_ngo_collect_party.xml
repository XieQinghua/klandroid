<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white">

        <org.thvc.happyi.view.CircleImageView
            android:id="@+id/iv_ngo_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_head_default"
            app:border_color="@color/party_background"
            app:border_width="2dp" />


        <TextView
            android:id="@+id/tv_ngo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_ngo_img"
            android:layout_toRightOf="@+id/iv_ngo_img"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="乐施会"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_party_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_label"
            android:drawablePadding="5dp"
            android:padding="@dimen/icon_padding"
            android:text="帮助他人"
            android:textColor="@color/party_text_color"
            android:textSize="@dimen/font_size_middle" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_party_subject"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_empty_default" />

        <org.thvc.happyi.view.ScoreTextView
            android:id="@+id/tv_biaoshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_orange_triangle"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_middle"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_party_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="125dp"
            android:background="#50000000">

            <TextView
                android:id="@+id/tv_party_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_dianzan"
                android:text="探视空巢老人"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_gray_shape"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_address"
                android:text="长沙"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_layout1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_party_subject"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="活动开始时间：2015-10-25 09:00"
                android:textColor="@color/happyi_content_color"
                android:textSize="@dimen/font_size_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_foundation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果V基金"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/tv_is_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/icon_renzheng"
                    android:text="已认证"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_layout1"
            android:background="@color/party_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/view_line"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_foundation_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果V基金为您省"
                    android:textColor="@color/happyi_content_color"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:id="@+id/tv_money1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="20.00"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="元"
                    android:textColor="@color/happyi_content_color"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/ll_renjun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_money" />

                    <TextView
                        android:id="@+id/tv_renjun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="人均费用"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_renjun_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="100.00"
                        android:textColor="@color/orangered"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="元"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_renjun"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原费用："
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.00元/人"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/ll_baomingrenshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_number" />

                    <TextView
                        android:id="@+id/tv_baoming_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="报名人数"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="7"
                        android:textColor="@color/party_text_color"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="人"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_baomingrenshu"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报名限额："
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_limit_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        android:textColor="@color/party_text_color"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="人"
                        android:textColor="@color/happyi_content_color"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancel_collect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_cancel_collect_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="取消关注"
        android:textColor="@color/orangered"
        android:textSize="@dimen/font_size_big" />
</LinearLayout>

