<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_party_number"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/party_flow_number_shape"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_party_flow_content"
        android:layout_below="@+id/tv_party_number"
        android:layout_marginLeft="12.5dp"
        android:background="@color/party_background" />

    <LinearLayout
        android:id="@+id/ll_party_flow_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_party_number"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_party_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2016-01-08 13:08"
            android:textColor="@color/happyi_title_color"
            android:textSize="@dimen/font_size_middle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_party_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="false"
            android:text="1.李锐开场白并为孩子们主持开笔礼"
            android:textColor="@color/happyi_content_color"
            android:textSize="@dimen/font_size_middle" />

    </LinearLayout>
</RelativeLayout>