    <RelativeLayout
        android:id="@+id/relativ_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_layout_title"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relative_homepage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="主页"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/font_size_big" />

                <TextView
                    android:id="@+id/view_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/orangered"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relative_pary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pary"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ta的认领"
                    android:textColor="@color/happyi_content_color"
                    android:textSize="@dimen/font_size_big" />

                <TextView
                    android:id="@+id/view_pary"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/orangered"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fund_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativ_layout"
        android:layout_marginTop="5dp">

    </FrameLayout>

