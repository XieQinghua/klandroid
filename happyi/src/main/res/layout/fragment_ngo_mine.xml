<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/party_background"
    android:orientation="vertical">

    <org.thvc.happyi.view.ElasticityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ngo_personal_data"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/img_default_cover">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_Message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@drawable/icon_message" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_Message"
                        android:background="@drawable/circle_red_shape"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <org.thvc.happyi.view.CircleImageView
                    android:id="@+id/im_user_img"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_head_default"
                    app:border_color="@color/white"
                    app:border_width="2dp" />

                <TextView
                    android:id="@+id/iv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_user_img"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_big" />

                <TextView
                    android:id="@+id/tv_ngo_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_user_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_MyParty"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_my_party"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="我的活动" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/party_background" />

                <TextView
                    android:id="@+id/tv_MyFollow"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_my_guanzhu"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="我的关注" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/party_background" />

                <TextView
                    android:id="@+id/tv_Saoyisao"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_saoyisao"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="扫一扫"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_Auth"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_auth"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="认证管理" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/party_background" />

                <TextView
                    android:id="@+id/tv_Refund"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_refund"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="退款操作" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/party_background" />

                <TextView
                    android:id="@+id/tv_Set"
                    style="@style/happyi_normal_text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/icon_setting"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="设置" />
            </LinearLayout>
        </LinearLayout>
    </org.thvc.happyi.view.ElasticityScrollView>
</LinearLayout>
