<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/happyi_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/party_background" />

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_marginLeft="48dp"
            android:background="@color/orangered" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/im_account2" />

        <EditText
            android:id="@+id/edit_Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/edit_Account_hint"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/party_background" />

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_marginLeft="48dp"
            android:background="@color/orangered" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/im_password2" />

        <EditText
            android:id="@+id/edit_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/edit_Password_hint"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativ_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="45dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/party_background" />

                <CheckBox
                    android:id="@+id/check_Remember_Passwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/transparent"
                    android:button="@drawable/checkbox_style"
                    android:paddingLeft="10dp"
                    android:text="@string/remember_passwords"
                    android:textColor="@color/happyi_title_color"
                    android:textSize="@dimen/font_size_normal" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/party_background" />

            </LinearLayout>

            <View
                android:id="@+id/view_orangered"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp"
                android:background="@color/orangered" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Forget_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/relativ_layout"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="48dp"
            android:paddingTop="2dp"
            android:text="@string/forget_password"
            android:textColor="@color/happyi_content_color"
            android:textSize="@dimen/font_size_middle" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_Landing"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/btn_ok_selector"
            android:text="@string/btn_Landing"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/tv_Registered"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="@string/tv_Registered"
            android:textColor="@color/happyi_title_color"
            android:textSize="@dimen/font_size_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/img_orange_line" />

        <TextView
            android:id="@+id/tv_Third_Party_Landing"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/third_party_landing"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_normal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_qq_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_transparent_selector"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/icon_qq" />

            <ImageButton
                android:id="@+id/ib_weibo_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_transparent_selector"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/icon_weibo" />

            <ImageButton
                android:id="@+id/ib_wechat_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_transparent_selector"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/icon_wechat" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>